<resources>

    <style name="Theme.Bacon" parent="Theme.Bacon.Base"></style>

    <style name="Theme.Bacon.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:background">#00ffffff</item>
    </style>

    <style name="Theme.Bacon.FAB">
        <!--<item name="android:elevation">@dimen/fab_elevation</item>-->
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:background">@drawable/add_fab_background</item>
    </style>

    <style name="Theme.Bacon.ArticleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.Bacon.SmallText">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/lightText</item>
    </style>
</resources>